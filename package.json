{
  "name": "kanban-board",
  "displayName": "Simple Kanban Board",
  "description": "Simple kanban board for TODO management.",
  "icon": "icon.png",
  "version": "1.0.0",
  "publisher": "te-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/tete0123/Kanban-Board.git"
  },
  "bugs": {
    "url": "https://github.com/tete0123/Kanban-Board/issues"
  },
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "kanban",
    "board",
    "agile",
    "project",
    "management",
    "sprint",
    "productivity",
    "scrum"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kanban.openBoard",
        "title": "Kanban: Open Board"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:extension && npm run compile:webview",
    "compile:extension": "tsc -p ./",
    "compile:webview": "tsc -p ./tsconfig.webview.json",
    "watch": "tsc -watch -p ./",
    "lint": "echo \"No lint configured\""
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/node": "^20.11.30",
    "typescript": "^5.4.0"
  }
}
